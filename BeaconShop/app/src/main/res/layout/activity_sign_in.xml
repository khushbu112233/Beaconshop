<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amplearch.beaconshop.Activity.SignInActivity">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/fasion_home"
       android:alpha="0.8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/login_shape"
        android:alpha="0.85"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/id_logo"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_shop_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"/>

        <LinearLayout
            android:id="@+id/llUsernameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:weightSum="1"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/id_logo"
            android:background="@drawable/rectangle_shape"
            android:layout_centerVertical="true">
            <View
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:layout_weight="0.1"
                android:background="@drawable/view_shape"
                android:layout_marginLeft="0dp"/>

            <com.amplearch.beaconshop.Utils.TrojanEditText
                android:inputType="textEmailAddress"
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:layout_weight="0.9"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.amplearch.beaconshop.Utils.TrojanText
            android:id="@+id/tvOR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llUsernameBox"
            android:text="OR"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/llEmailBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/tvOR"
            android:background="@drawable/rectangle_shape"
            android:layout_centerVertical="true">
            <View
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:layout_weight="0.1"
                android:background="@drawable/view_shape"
                android:layout_marginLeft="0dp"/>

            <com.amplearch.beaconshop.Utils.TrojanEditText
                android:inputType="textEmailAddress"
                android:id="@+id/etEmailAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:layout_weight="0.9"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPasswordBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/rectangle_shape"
            android:layout_below="@+id/llEmailBox"
            android:layout_marginTop="15dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp">
            <View
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_weight="0.1"
                android:background="@drawable/view_shape"
                android:layout_marginLeft="0dp"/>
            <com.amplearch.beaconshop.Utils.TrojanEditText
                android:id="@+id/etPass"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_weight="0.9"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <com.amplearch.beaconshop.Utils.TrojanText
            android:id="@+id/tvForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llPasswordBox"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:textAlignment="textEnd"
            android:textSize="15dp"/>

        <com.amplearch.beaconshop.Utils.TrojanButton
            android:id="@+id/tvSignIn"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:textColor="@color/logo_color"
            android:background="@drawable/button_shape"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvForgotPassword"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingLeft="0dp"
            android:paddingRight="00dp"
            android:gravity="center"
            android:layout_below="@+id/tvSignIn"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp">
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="11dp"
                android:layout_marginRight="-0dp"
                android:textColor="@android:color/white"
                android:text="Don't Have An Account?"/>
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="0dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
