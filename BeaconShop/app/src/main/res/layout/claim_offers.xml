<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.ElectClaimOfferAcivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:logo="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primary"
        android:gravity="center">

        <com.amplearch.beaconshop.Utils.TrojanText
            android:layout_width="match_parent"
            android:paddingLeft="-60dp"
            android:layout_height="wrap_content"
            android:text="BEACON SHOP"
            android:textColor="@color/white"
            android:id="@+id/toolbarTitle"
            android:layout_marginLeft="0dp"
            android:textAlignment="center"
            android:textSize="18dp"/>

    </android.support.v7.widget.Toolbar>

    <com.amplearch.beaconshop.Utils.TrojanText
        android:id="@+id/claim"
        android:layout_below="@+id/toolbar"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="You have already Claimed this Offer"
        android:textColor="@color/primary_dark"/>


    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/claim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_shape"
        android:alpha="0.4"
        />

    <RelativeLayout
        android:layout_below="@+id/claim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        >

        <RelativeLayout
            android:id="@+id/llItemsOffer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:alpha="0.7"
            android:background="@drawable/login_shape"
            android:layout_marginTop="20dp">
            <com.amplearch.beaconshop.Utils.TrojanText
                android:id="@+id/tvItemOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Electronic Offer"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="10dp" />
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Flat 10%"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tvItemOfferDetails"
                android:layout_below="@+id/tvItemOffer"/>
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Flat 10%"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:id="@+id/tvItemOfferCode" />

            <FrameLayout
                android:id="@+id/redeemid"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/redeem">

            </FrameLayout>

        </RelativeLayout>

      <com.amplearch.beaconshop.Utils.TrojanCheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="AGREE TO TERMS AND CONDITIONS."
          android:textColor="@color/black"
          android:id="@+id/chAgree"
          android:layout_below="@+id/llItemsOffer"
          android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/llItemShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_above="@+id/btnItemClaimOffer"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_heart_blue"
                android:layout_weight="0.2"/>
            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_share"
                android:layout_weight="0.2"/>
        </LinearLayout>

        <com.amplearch.beaconshop.Utils.TrojanButton
            android:id="@+id/btnItemClaimOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="CLAim THIS OFFER"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_shap"/>
    </RelativeLayout>

</RelativeLayout>