<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.ElectClaimOfferAcivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fasion_home"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent">

        <com.amplearch.beaconshop.Utils.TrojanText
            android:id="@+id/claim"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="You have already Claimed this Offer"
            android:textColor="@color/white"/>


        <RelativeLayout
            android:id="@+id/llItemsOffer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/login_shape"
            android:layout_marginTop="20dp">
            <com.amplearch.beaconshop.Utils.TrojanText
                android:id="@+id/tvItemOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Electronic Offer"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="25dp" />
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Flat 10%"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tvItemOfferDetails"
                android:layout_below="@+id/tvItemOffer"/>
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Flat 10%"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:id="@+id/tvItemOfferCode" />
            <View
                android:id="@+id/crosslineFirst"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/red"
                android:rotation="-45"
                android:layout_marginTop="160dp"
                android:visibility="gone"/>
            <View
                android:id="@+id/crosslineSecond"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/red"
                android:rotation="45"
                android:layout_marginTop="160dp"
                android:visibility="gone"/>
        </RelativeLayout>

      <com.amplearch.beaconshop.Utils.TrojanCheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="AGREE TO TERMS AND CONDITIONS."
          android:textColor="@color/white"
          android:id="@+id/chAgree"
          android:layout_below="@+id/llItemsOffer"
          android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/llItemShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@+id/chAgree"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_heart_blue"
                android:layout_weight="0.2"/>
            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_share"
                android:layout_weight="0.2"/>
        </LinearLayout>

        <com.amplearch.beaconshop.Utils.TrojanButton
            android:id="@+id/btnItemClaimOffer"
            android:layout_below="@+id/llItemShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CLAim THIS OFFER"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_shap"/>
    </RelativeLayout>

</RelativeLayout>