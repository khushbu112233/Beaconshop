<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fasion_home"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="0dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/llMenOffer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/login_shape"
            android:layout_marginTop="20dp">
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MANS WEAR OFFER"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:id="@+id/tvMenOffer"/>
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On Men Cloths Offer has Going To Be On Last Saturday Till 10-Aprl-2017"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tvMenOfferDetails"/>
        </LinearLayout>

      <com.amplearch.beaconshop.Utils.TrojanCheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="AGREE TO TERMS AND CONDITIONS."
          android:textColor="@color/white"
          android:id="@+id/chAgree"
          android:layout_below="@+id/llMenOffer"
          android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/llShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@+id/chAgree"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_facebook"
                android:layout_weight="0.2"/>
            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_heart_blue"
                android:layout_weight="0.2"/>
            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_share"
                android:layout_weight="0.2"/>
        </LinearLayout>

        <com.amplearch.beaconshop.Utils.TrojanButton
            android:id="@+id/btnClaimOffer"
            android:layout_below="@+id/llShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CLAim THIS OFFER"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_shap"/>
    </RelativeLayout>

</RelativeLayout>