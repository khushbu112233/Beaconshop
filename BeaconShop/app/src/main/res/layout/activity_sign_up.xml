<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.amplearch.beaconshop.Activity.SignUpActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:visibility="gone"
        app:logo="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primary"
        android:gravity="center">

        <com.amplearch.beaconshop.Utils.TrojanText
            android:layout_width="match_parent"
            android:paddingLeft="-60dp"
            android:layout_height="wrap_content"
            android:text="BEACON SHOP"
            android:textColor="@color/white"
            android:id="@+id/toolbarTitle"
            android:layout_marginLeft="0dp"
            android:textAlignment="center"
            android:textSize="18dp"/>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.amplearch.beaconshop.Utils.cgTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="31sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="BeaconShop"/>
    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:id="@+id/llUsernameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="35dp"
            android:paddingTop="10dp"
            android:paddingLeft="2dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user1" />
            <com.amplearch.beaconshop.Utils.GillSansEditText
                android:id="@+id/etUserName"
                android:inputType="textPersonName|text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:layout_weight="0.9"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llUsernameBox"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/llEmailBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llUsernameBox">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_email" />
            <com.amplearch.beaconshop.Utils.GillSansEditText
                android:id="@+id/etEmailAddress"
                android:inputType="text|textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:layout_weight="0.9"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llEmailBox"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/llContactBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llEmailBox">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_mobile" />
            <com.amplearch.beaconshop.Utils.GillSansEditText
                android:id="@+id/etContactNo"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact No"
                android:layout_weight="0.9"
                android:maxLength="10"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llContactBox"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/llPasswordBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llContactBox">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_password" />
            <com.amplearch.beaconshop.Utils.GillSansEditText
                android:id="@+id/etPassword"
                android:inputType="text|textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_weight="0.9"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llPasswordBox"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/llRePaswordBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llPasswordBox">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_password" />
            <com.amplearch.beaconshop.Utils.GillSansEditText
                android:id="@+id/etRePassword"
                android:inputType="text|textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Re-Password"
                android:layout_weight="0.9"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llRePaswordBox"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/llCountryBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llRePaswordBox">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_web" />
            <Spinner
                android:id="@+id/spnCountry"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llCountryBox"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"/>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/llStateBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llCountryBox">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_state"
                />

            <Spinner
                android:id="@+id/spnState"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <com.amplearch.beaconshop.Utils.GillSansButton
            android:id="@+id/tvSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/llStateBox"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_shape"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="0dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/lnrSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingLeft="0dp"
            android:paddingRight="00dp"
            android:gravity="center"
            android:layout_below="@+id/tvSignUp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="0dp">
            <com.amplearch.beaconshop.Utils.GillSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="Already have an account?"/>
            <com.amplearch.beaconshop.Utils.GillSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Sign in"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:textColor="@color/white"/>
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
