<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amplearch.beaconshop.Activity.SignUpActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fasion_home"
        android:alpha="0.8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_shape"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:id="@+id/llUsernameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/rectangle_shape"
            android:layout_marginTop="35dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp">
            <View
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_weight="0.1"
                android:background="@drawable/view_shape"
                android:layout_marginLeft="0dp"/>
            <com.amplearch.beaconshop.Utils.TrojanEditText
                android:id="@+id/etUserName"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:layout_weight="0.9"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llEmailBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/rectangle_shape"
            android:layout_marginTop="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llUsernameBox">
            <View
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_weight="0.1"
                android:background="@drawable/view_shape"
                android:layout_marginLeft="0dp"/>
            <com.amplearch.beaconshop.Utils.TrojanEditText
                android:id="@+id/etEmailAddress"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:layout_weight="0.9"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llContactBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/rectangle_shape"
            android:layout_marginTop="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llEmailBox">
            <View
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_weight="0.1"
                android:background="@drawable/view_shape"
                android:layout_marginLeft="0dp"/>
            <com.amplearch.beaconshop.Utils.TrojanEditText
                android:id="@+id/etContactNo"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact No"
                android:layout_weight="0.9"
                android:maxLength="10"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llPasswordBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/rectangle_shape"
            android:layout_marginTop="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llContactBox">
            <View
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_weight="0.1"
                android:background="@drawable/view_shape"
                android:layout_marginLeft="0dp"/>
            <com.amplearch.beaconshop.Utils.TrojanEditText
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_weight="0.9"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llRePaswordBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/rectangle_shape"
            android:layout_marginTop="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:layout_below="@+id/llPasswordBox">
            <View
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_weight="0.1"
                android:background="@drawable/view_shape"
                android:layout_marginLeft="0dp"/>
            <com.amplearch.beaconshop.Utils.TrojanEditText
                android:id="@+id/etRePassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Re-Password"
                android:layout_weight="0.9"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <com.amplearch.beaconshop.Utils.TrojanButton
            android:id="@+id/tvSignUp"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llRePaswordBox"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_shape"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:textColor="@color/logo_color"
            android:padding="0dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingLeft="0dp"
            android:paddingRight="00dp"
            android:gravity="center"
            android:layout_below="@+id/tvSignUp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp">
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="11dp"
                android:textColor="@android:color/white"
                android:text="ALREADY HAVE AN ACCOUNT?"/>
            <com.amplearch.beaconshop.Utils.TrojanText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Sign IN"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
