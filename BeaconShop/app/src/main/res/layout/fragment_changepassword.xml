    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

    <LinearLayout
        android:id="@+id/llEmailBoxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="130dp"
        android:weightSum="1"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/rectangle_shape">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <View
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/view_shape"
            android:layout_marginLeft="0dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/email" />
        </FrameLayout>
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/etChEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:textColorHint="@color/primary_dark"
            android:textColor="@color/primary_dark"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:layout_weight="0.9" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOldPasswordBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:weightSum="1"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/rectangle_shape"
        android:layout_below="@+id/llEmailBoxx">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <View
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/view_shape"
            android:layout_marginLeft="0dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/password" />
    </FrameLayout>
        <EditText
            android:inputType="text"
            android:id="@+id/etChOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Old Password"
            android:textColorHint="@color/primary_dark"
            android:textColor="@color/primary_dark"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:layout_weight="0.9"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNewPasswordBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:weightSum="1"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/rectangle_shape"
        android:layout_below="@+id/llOldPasswordBox">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <View
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/view_shape"
            android:layout_marginLeft="0dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/password" />
        </FrameLayout>
        <EditText
            android:inputType="text"
            android:id="@+id/etChNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:textColorHint="@color/primary_dark"
            android:textColor="@color/primary_dark"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:layout_weight="0.9" />
    </LinearLayout>

    <com.amplearch.beaconshop.Utils.TrojanButton
        android:id="@+id/btnChange"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="Save"
        android:textColor="@color/white"
        android:layout_below="@+id/llNewPasswordBox"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

     </RelativeLayout>

</RelativeLayout>