<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amplearch.beaconshop.Activity.ImageActivity"
    android:background="@color/color_logo"
    android:gravity="center">
    
    <TextView
        android:id="@+id/tvImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Convert"/>

    <ImageView
        android:id="@+id/ivBitmapImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnImport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add into Database"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/btnExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get from Database"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>
